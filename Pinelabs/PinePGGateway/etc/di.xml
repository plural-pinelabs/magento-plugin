<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <preference for="Magento\Quote\Observer\Webapi\SubmitObserver" type="Pinelabs\PinePGGateway\Observer\PineSendEmailObserver" />		
    <preference for="Magento\Checkout\Controller\Onepage\Failure" type="Pinelabs\PinePGGateway\Observer\PinePGFailure" />

    <!-- Custom Logger Configuration -->
    <type name="Pinelabs\PinePGGateway\Logger\Logger">
        <arguments>
            <argument name="name" xsi:type="string">pinelabs_gateway</argument>
            <argument name="handlers" xsi:type="array">
                <item name="system" xsi:type="object">Pinelabs\PinePGGateway\Logger\Handler</item>
            </argument>
        </arguments>
    </type>

</config>
